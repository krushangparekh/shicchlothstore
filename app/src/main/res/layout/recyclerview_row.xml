<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/relativeLayoutitem"
	android:background="#218A8D8F"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:elevation="60dp"
		app:cardCornerRadius="15dp"
		app:cardUseCompatPadding="true"
		tools:targetApi="lollipop">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="1dp"
			android:layout_marginTop="1dp"
			android:layout_marginEnd="1dp"
			android:layout_marginBottom="1dp"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/rvproductimageurl"
				android:layout_width="160dp"
				android:layout_height="170dp"
				android:layout_gravity="center"
				android:layout_marginTop="10dp"
				android:src="@drawable/can1" />

			<!--	<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:text="shiv1"
					android:textSize="16sp" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:text="shiv2"
					android:textSize="16sp" />

			</LinearLayout>-->

			<TextView
				android:id="@+id/title"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="5dp"
				android:paddingStart="15dp"
				android:layout_marginBottom="3dp"
				android:textColor="#681900"
				android:text="@string/shiv_cloth_store"
				android:textSize="13sp" />

			<TextView
				android:id="@+id/price"
				android:layout_width="150dp"
				android:textColor="@color/purple_700"

				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:paddingStart="15dp"


				android:layout_marginBottom="5dp"
				android:text="@string/shiv_cloth_store_RS"
				android:textSize="13sp" />
		</LinearLayout>

	</androidx.cardview.widget.CardView>


</RelativeLayout>