<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/white"

	android:padding="20dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<ImageView
			android:layout_width="143dp"
			android:layout_height="132dp"
			android:layout_gravity="center"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="5dp"
			android:src="@drawable/email21"
			app:tint="#F3247FE6" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:fontFamily="@font/carter_one"
			android:text="@string/forget_password"
			android:textAllCaps="true"
			android:textColor="#F3247FE6"
			android:textSize="25sp" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="20dp"
			android:fontFamily="@font/abhaya_libre_medium"
			android:text="@string/resetyourpassword"
			android:textAlignment="center"
			android:textAllCaps="false"
			android:textColor="@color/black"
			android:textSize="20sp"
			tools:ignore="HardcodedText" />
		<!--	<EditText
			android:id="mailforgetedt"
			android:layout_width="match_parent"
			android:layout_height="43dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/box"
			android:textColor="@color/black"
			android:hint="Email"
			android:paddingStart="10dp"
			android:drawableStart="@drawable/email"
			/>-->
		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<EditText
			android:id="@+id/ETEmailedittext"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:hint="Email"
			android:background="@drawable/box"
			android:maxLength="32"
			android:padding="10dp"
			android:textSize="15sp"
			android:paddingStart="20dp"
			android:singleLine="true"
			android:textColor="@color/black"
			android:textColorHint="@color/black" />

		</com.google.android.material.textfield.TextInputLayout>


		<Button
			android:id="@+id/buttonnext"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:shadowColor="@color/black"
			android:padding="10dp"
			android:backgroundTint="#F3247FE6"
			android:background="@drawable/box"
			android:textColor="@color/white"
			android:text="Next" />


	</LinearLayout>
</ScrollView>