<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/blue"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/add_address_toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/blue"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:text="Add Address"
			android:textAlignment="center"
			android:textColor="#000"
			android:textSize="18sp"
			app:subtitleTextColor="@color/black"
			tools:ignore="HardcodedText" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:orientation="vertical">

		<EditText
			android:id="@+id/etaddFirstName"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:textSize="15sp"
			android:layout_marginBottom="10dp"
			android:autofillHints="name"
			android:background="@drawable/box"
			android:hint="First Name"
			android:inputType="text"
			android:paddingStart="5dp"
			tools:ignore="HardcodedText,RtlSymmetry" />

		<EditText
			android:id="@+id/etaddLastName"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_marginBottom="10dp"
			android:textSize="15sp"

			android:autofillHints="name"
			android:background="@drawable/box"
			android:hint="Last Name"

			android:inputType="text"
			android:paddingStart="5dp"
			tools:ignore="HardcodedText" />

		<EditText
			android:id="@+id/etaddAddressLine1"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_marginBottom="10dp"
			android:autofillHints="postalAddress"
			android:background="@drawable/box"
			android:textSize="15sp"

			android:hint="Address Line 1"
			android:paddingStart="5dp"
			tools:ignore="HardcodedText,TextFields" />

		<EditText
			android:id="@+id/etaddAddressLine2"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:textSize="15sp"
			android:paddingStart="5dp"


			android:layout_marginBottom="10dp"
			android:autofillHints="postalAddress"
			android:background="@drawable/box"
			android:hint="Apartment,suie,etc."
			tools:ignore="HardcodedText,TextFields" />

		<EditText
			android:id="@+id/etaddCity"
			android:layout_width="match_parent"
			android:textSize="15sp"

			android:layout_height="42dp"
			android:layout_marginBottom="10dp"
			android:autofillHints="city"
			android:background="@drawable/box"
			android:hint="City"
			android:inputType="text"
			android:paddingStart="5dp"
			tools:ignore="HardcodedText" />

		<EditText
			android:id="@+id/etaddState"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_marginBottom="10dp"
			android:autofillHints="state"
			android:background="@drawable/box"
			android:hint="State"
			android:textSize="15sp"


			android:inputType="text"
			android:paddingStart="5dp"
			tools:ignore="HardcodedText" />

		<EditText
			android:id="@+id/etaddCountry"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:textSize="15sp"

			android:layout_marginBottom="10dp"
			android:autofillHints="Country"
			android:background="@drawable/box"
			android:hint="Country"

			android:inputType="text"
			android:paddingStart="5dp"
			tools:ignore="HardcodedText" />

		<EditText
			android:id="@+id/etaddPINcode"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_marginBottom="10dp"
			android:textSize="15sp"

			android:autofillHints="Country"
			android:background="@drawable/box"
			android:hint="PIN code"

			android:inputType="number"
			android:paddingStart="5dp"
			tools:ignore="HardcodedText" />
	</LinearLayout>


	<LinearLayout
		android:id="@+id/textInputLayout8"
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
		android:layout_width="match_parent"
		android:layout_height="52dp"
		android:layout_margin="10dp"
		android:gravity="center"
		android:hint="@string/phone_number"
		android:orientation="vertical">

		<Button
			android:id="@+id/BTNContinuetopayment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:layout_marginStart="29dp"
			android:layout_marginEnd="29dp"
			android:background="@drawable/box"
			android:backgroundTint="@color/blue"
			android:padding="9sp"
			android:shadowColor="@color/black"
			android:textAllCaps="false"
			android:text="Continue to payment"
			tools:ignore="HardcodedText"
			tools:targetApi="lollipop" />
	</LinearLayout>

</LinearLayout>

